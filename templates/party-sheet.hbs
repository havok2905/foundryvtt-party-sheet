<form
  autocomplete="off"
  class="{{cssClass}} flexcol foundryvtt-party-sheet">
  <header class="sheet-header flexrow">
    <img
      class="profile"
      data-edit="img"
      src="{{actor.img}}"
      title="{{actor.name}}"/>
    <section class="header-details flexrow">
      <h1 class="charname">
        <input
          name="name"
          placeholder="Party Name"
          type="text"
          value="{{actor.name}}"/>
      </h1>
      <div class="summary flexrow">
        <input
          name="location"
          placeholder="Location"
          type="text"
          value="{{location}}"/>
      </div>
      <ul class="attributes flexrow">
        <li class="attribute">
          <h4 class="attribute-name box-title">
            <input
              id="reputationNameA"
              name="reputationNameA"
              placeholder="Faction name"
              type="text"
              value="{{reputationNameA}}"/>
          </h4>
          <div class="attribute-value">
            <input
              id="reputationValueA"
              name="reputationValueA"
              type="number"
              value="{{reputationValueA}}"/>
          </div>
        </li>
        <li class="attribute">
          <h4 class="attribute-name box-title">
            <input
              id="reputationNameB"
              name="reputationNameB"
              placeholder="Faction name"
              type="text"
              value="{{reputationNameB}}"/>
          </h4>
          <div class="attribute-value">
            <input
              id="reputationValueB"
              name="reputationValueB"
              type="number"
              value="{{reputationValueB}}"/>
          </div>
        </li>
        <li class="attribute">
          <h4 class="attribute-name box-title">
            <input
              id="reputationNameC"
              name="reputationNameC"
              placeholder="Faction name"
              type="text"
              value="{{reputationNameC}}"/>
          </h4>
          <div class="attribute-value">
            <input
              id="reputationValueC"
              name="reputationValueC"
              type="number"
              value="{{reputationValueC}}"/>
          </div>
        </li>
        <li class="attribute">
          <h4 class="attribute-name box-title">
            <input
              id="reputationNameD"
              name="reputationNameD"
              placeholder="Faction name"
              type="text"
              value="{{reputationNameD}}"/>
          </h4>
          <div class="attribute-value">
            <input
              id="reputationValueD"
              name="reputationValueD"
              type="number"
              value="{{reputationValueD}}"/>
          </div>
        </li>
        <li class="attribute">
          <h4 class="attribute-name box-title">
            <input
              id="reputationNameE"
              name="reputationNameE"
              placeholder="Faction name"
              type="text"
              value="{{reputationNameE}}"/>
          </h4>
          <div class="attribute-value">
            <input
              id="reputationValueE"
              name="reputationValueE"
              type="number"
              value="{{reputationValueE}}"/>
          </div>
        </li>
      </ul>
    </section>
  </header>
  <section
    class="sheet-body"
    style="overflow: scroll">
    <div class="inventory-filters">
      <ol class="currency flexrow">
        <h3>Currency</h3>
        <label class="denomination sp">
          Copper
        </label>
        <input
          name="cp"
          step="any"
          type="number"
          value="{{cp}}"/>
        <label class="denomination cp">
          Silver
        </label>
        <input
          id="sp"
          name="sp"
          step="any"
          type="number"
          value="{{sp}}"/>
        <label class="denomination sp">
          Electrum
        </label>
        <input
          id="ep"
          name="ep"
          step="any"
          type="number"
          value="{{ep}}"/>
        <label class="denomination ep">
          Gold
        </label>
        <input
          id="gp"
          name="gp"
          step="any"
          type="number"
          value="{{gp}}"/>
        <label class="denomination gp">
          Platinum
        </label>
        <input
          id="pp"
          name="pp"
          step="any"
          type="number"
          value="{{pp}}"/>
      </ol>
    </div>
    <ol class="items-list inventory-list">
      {{#each items as |itemset isid|}}
        <li class="items-header flexrow">
          <h3 class="item-name flexrow">
            {{itemset.name}}
          </h3>
          <div class="item-detail item-weight">
            Weight
          </div>
          <div class="item-detail item-uses">
            Charges
          </div>
          <div class="item-detail item-action">
            Usage
          </div>
          <div class="item-controls flexrow">
            <a
              class="item-control item-create"
              data-name="{{itemset.newItemName}}"
              data-type="{{itemset.type}}"
              title="Create Item">
              <i
                class="item-create-icon fas fa-plus"
                data-name="{{itemset.newItemName}}"
                data-type="{{itemset.type}}">
              </i>
              Add
            </a>
          </div>
        </li>
        <ol class="item-list">
          {{#each itemset.collection as |item iid|}}
            <li
              class="item flexrow"
              data-item-id="{{item._id}}"
              draggable="true">
              <div class="item-name flexrow rollable">
                <div
                  aria-label="{{item.name}}"
                  class="item-image"
                  data-item-id="{{item._id}}"
                  role="button"
                  style="background-image: url('{{item.img}}')"
                  tabindex="0">
                </div>
                <h4 class="item-name-header">
                  {{item.name}}
                </h4>
              </div>
              <div class="item-detail item-weight">
                <div class="item-detail">
                  {{item.system.weight}}
                </div>
              </div>
              <div class="item-detail item-uses">
                <div class="item-detail">
                  {{item.system.uses.value}} / {{item.system.uses.max}}
                </div>
              </div>
              <div class="item-detail item-action">
                <div class="item-detail">
                  {{#if item.system.activation}}
                    {{item.system.activation.cost}} {{item.system.activation.type}}
                  {{/if}}
                </div>
              </div>
              <div class="item-controls flexrow">
                <a
                  class="item-control item-edit"
                  data-item-id="{{item._id}}"
                  title="Edit Item">
                  <i
                    class="fas fa-edit item-edit-icon"
                    data-item-id="{{item._id}}">
                  </i>
                </a><a
                  class="item-control item-delete"
                  data-item-id="{{item._id}}"
                  title="Delete Item">
                  <i
                    class="fas fa-trash item-delete-icon"
                    data-item-id="{{item._id}}">
                  </i>
                </a>
              </div>
              <div class="item-summary">
                {{{item.system.description.value}}}
              </div>
            </li>
          {{/each}}
        </ol>
      {{/each}}
    </ol>
    <div class="foundryvtt-player-character-list">
      {{#each playerCharacters as |character cid|}}
        <div class="foundryvtt-player-character">
          <img src="{{character.img}}"/>
          <div>
            <h3>{{character.name}}</h3>
            {{#if (eq character.type "character")}}
              <p>
                {{character.system.details.alignment}}, {{character.system.details.race}}
              </p>
              <p>
                {{character.system.details.background}}
              </p>
              <p>
                {{#each character.classes as |class|}}
                  <span>
                    {{class.name}}({{class.system.levels}})
                  </span>
                {{/each}}
              </p>
            {{/if}}
            {{#if (eq character.type "npc")}}
              <p>
                {{character.system.details.alignment}}, {{character.system.details.type.value}}; {{character.system.details.type.subtype}}
              </p>
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  </section>
</form>